<!DOCTYPE html>
<html>
  <head>
    <title>MyWallet</title>
    
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js' %>
    <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>

  <nav class='navbar navbar-inverse navbar-fixed-top'>
    <div class='container'>
      <ul class='nav nav-pills navbar-left'>
    <% if current_user %>
        <li> <%= link_to 'Home', user_path(current_user.id) %> </li>
        <li>
          <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="menu-drop" data-toggle="dropdown">Add Payment Source
            <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="payment-sources">
              <li role="presentation">
                <%= link_to 'Add Card', new_user_card_path(current_user), id: 'add-card', 
                      role: 'menuitem', tabindex: '-1'  %>
              </li>
              <li role="presentation">
                <%= link_to 'Add Account', new_user_account_path(current_user), id: 'add-account', 
                      role: 'menuitem', tabindex: '-1'  %>
              </li>
            </ul>
          </div>
        <li>
        <li>
          <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="menu-drop" data-toggle="dropdown">Statements
            <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="statements">
              <li role="presentation">
                <%= link_to 'Cards', user_cards_path(current_user), id: 'list-cards', 
                      role: 'menuitem', tabindex: '-1'  %>
              </li>
              <li role="presentation">
                <%= link_to 'Accounts', user_accounts_path(current_user), id: 'list-accounts', 
                      role: 'menuitem', tabindex: '-1'  %>
              </li>
            </ul>
          </div>
        <li>
          <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="menu-drop" data-toggle="dropdown">Offers
            <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="payments">
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">New Offers</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Saved Offers</a></li>
            </ul>
          </div>
        <li>
          <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="menu-drop" data-toggle="dropdown">Payments
            <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="payments">
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Make Payment</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Overdue Payments</a></li>
            </ul>
          </div>
        </li>
      <% else %>
          <li> <%= link_to 'Home', root_path %> </li>
      <% end %>
      </ul>
      <div class='navbar-text navbar-right'>
        <% if current_user %>
          Signed in as <%= current_user.email %> | 
          <%  if current_user %>
            <%= link_to "Logout", session_path(current_user), method: :delete %>
          <%  end %>
        <% else %>
          <%= link_to "Login", new_session_path %> | 
          <%= link_to "Sign Up", new_user_path %>
        <% end %>
      </div>
    </div>
  </nav>

  <div class="flash">
    <% if flash[:notice] %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>

  <div class="container-fluid">
    <%= yield %>
  </div>

  </body>
</html>
