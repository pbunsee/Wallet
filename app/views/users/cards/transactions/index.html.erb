
<%= "description category currency transaction date  post date from account to account account id " %><br>
<% @transactions.each do |transaction| %>
  <div class='transaction'>
    <ul class='transaction-attributes'>
  <%= "#{transaction.description} #{transaction.amount} #{transaction.currency} #{transaction.transaction_date} #{transaction.post_date} #{transaction.from_account} #{transaction.to_account} #{transaction.account_id} #{transaction.card_id} #{transaction.associated_entity} " %>
    </ul>
  </div>
<% end %>

    <% if @card %> 
      <%= link_to 'Add new card Transaction', new_user_card_transaction_path(current_user, @card.id) %> 
    <% end %> 

    <% if @account %> 
      <%= link_to 'Add new account Transaction', new_user_account_transaction_path(current_user, @account.id) %> 
    <% end %> 
